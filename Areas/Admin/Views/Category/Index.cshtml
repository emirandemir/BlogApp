
@model List<BlogApp.Data.Category>
@{    
    Layout = "_Layout";
}

<div class="container mt-3">
<table class="table table-success table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Definition</th>
            <th>SeoUrl</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Definition</td>
                    <td>@category.SecoUrl</td>
                    <td>
                        <a asp-action="Update" asp-controller="Category" asp-area="Admin" asp-route-id="@category.Id">Update</a>
                        <a>Remove</a>
                    </td>
                </tr>
            }
        }

        else
        {
            <tr>
                <td colspan="4" class="text-center"> Kayıt Bulunamadı </td>
            </tr>
        }
    </tbody>
</table>
</div>